<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.IsimDegis">

    <Button
        android:id="@+id/isimDegisButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/gradient_card"
        android:fontFamily="@font/sriracha"
        android:text="KAYDET"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.866"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toTopOf="@+id/isimDegisButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <RadioButton
            android:id="@+id/belirtisizRadioButton"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sriracha"
            android:text="Belirtmek İstemiyorum" />

        <RadioButton
            android:id="@+id/kadinRadioButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sriracha"
            android:text="Kadın" />

        <RadioButton
            android:id="@+id/erkekRadioButton"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sriracha"
            android:text="Erkek" />
    </RadioGroup>

    <EditText
        android:id="@+id/isimGirinizTextView"
        android:layout_width="277dp"
        android:layout_height="61dp"
        android:layout_marginBottom="70dp"
        android:ems="10"
        android:fontFamily="@font/sriracha"
        android:hint="İsim Giriniz"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.961" />

</androidx.constraintlayout.widget.ConstraintLayout>